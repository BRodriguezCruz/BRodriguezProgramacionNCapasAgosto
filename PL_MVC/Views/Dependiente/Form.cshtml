@model ML.Dependiente
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">EMPLEADO NUMERO:@Model.Empleado.IdEmpleado</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4>Agregue datos del Dependiente</h4>
        </div>
    </div>
    <br />
    @using (Html.BeginForm("Form", "Dependiente", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(model => model.Empleado.IdEmpleado)
        @Html.HiddenFor(model => model.IdDependiente)

        <div class="row">
            <div class="col-md-3">
                @Html.LabelFor(model => model.Nombre)
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => model.ApellidoPaterno)
                @Html.TextBoxFor(model => model.ApellidoPaterno, new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => model.ApellidoMaterno)
                @Html.TextBoxFor(model => model.ApellidoMaterno, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-3">
                @Html.LabelFor(model => model.Telefono)
                @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => model.EstadoCivil)
                @Html.TextBoxFor(model => model.EstadoCivil, new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => model.FechaNacimiento)
                @Html.TextBoxFor(model => model.FechaNacimiento, new { @class = "form-control", Type = "date" })
            </div>
            <div class="col-md-3">
                @Html.LabelFor(model => model.Rfc)
                @Html.TextBoxFor(model => model.Rfc, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-3">
                @Html.LabelFor(model => model.Genero)
                @Html.TextBoxFor(model => model.Genero, new { @class = "form-control" })
            </div>
        </div>

        <br />
        <button id="btnAdd" class="btn btn-success" type="submit">  <i class="fa-solid fa-user-plus" style="color: #ffffff;"></i>HECHO</button>
        <a class=" btn btn-outline-warning" id="btnBack" href="@Url.Action("GetDependiente", "Dependiente", new {idEmpleado = Model.Empleado.IdEmpleado})">VOLVER</a>
    }
